<div class="d-flex justify-content-between align-items-center p-3 mb-4 bg-light">
  <h3 class="mb-0">Simple Airbnb</h3>
  <%= link_to 'Add flat', new_flat_path, class: "btn btn-success" %>
</div>

<div class="container my-5">
  <div>
    <h1 class="mb-4">All our Flats (<%= @flats.count %>)</h1>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <img src="<%= flat.image_url %>" class="card-img-top" alt="Flat image">
          <div class="card-body">
            <h5 class="card-title"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <div class="d-flex justify-content-between">
              <p class="card-text">
                <i class="fas fa-dollar-sign"></i> <%= flat.price_per_night %>
              </p>
              <p class="card-text">
                <i class="fas fa-user"></i> <%= flat.number_of_guests %>
              </p>
            </div>
            <div class="d-flex justify-content-between">
              <%= link_to 'More Info', flat_path(flat), class: "btn btn-link text-decoration-none" %>
              <a href="#" class="btn btn-link" style="text-decoration: none;">Edit</a>
              <a href="#" class="btn btn-link" style="text-decoration: none;">Remove</a>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
