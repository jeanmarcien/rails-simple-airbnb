<div class="d-flex justify-content-between align-items-center p-3 mb-4 bg-light">
    <h3 class="mb-0">Simple Airbnb</h3>
</div>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for(@flat, html: { class: 'form-horizontal' }) do |f| %>
        <div class="form-group">
          <%= f.input :name, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :address, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :description, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :price_per_night, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>
        <div class="form-group">
          <%= f.input :number_of_guests, label_html: { class: 'form-label' }, input_html: { class: 'form-control' } %>
        </div>

        <div class="d-flex justify-content-between mt-4">
          <%= f.submit 'Add flat', class: "btn btn-success" %>
          <%= link_to 'Cancel', flats_path, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
